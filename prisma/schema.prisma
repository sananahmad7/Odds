generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Category model (for article tags/categories)
model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String    @unique
  articles Article[] @relation("ArticleCategories")
}

// Article model
model Article {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  thumbnail   String
  publishedAt DateTime
  isFeatured  Boolean? @default(false)
  published   Boolean  @default(false)

  // Many-to-many relation with Category
  categories Category[] @relation("ArticleCategories")

  // 1-to-many: ordered blocks of content
  contentBlocks ArticleContent[]

  // Meta tags as string array
  metaTags String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ContentType {
  heading
  subheading
  text
  image
}

// Individual content block of an article
model ArticleContent {
  id          Int         @id @default(autoincrement())
  type        ContentType
  content     String
  description String? // optional (for images/captions)
  order       Int // 0-based index to preserve ordering

  // FK to Article
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([articleId, order])
}

enum AdminRole {
  ADMIN
}

model Admin {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  name         String?
  role         AdminRole @default(ADMIN)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
